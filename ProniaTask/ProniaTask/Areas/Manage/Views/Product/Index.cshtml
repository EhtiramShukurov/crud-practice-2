@model ICollection<Product>
<div class="container">
	<div class="card mt-5">
		<div class="table-responsive">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Img</th>
						<th>Name</th>
						<th>Price</th>
						<th>Size</th>
						<th>Color</th>
						<th>Category</th>
						<th>Desc</th>
						<th colspan="2">Operation</th>
					</tr>
				</thead>
				<tbody>
					@foreach (Product p in Model)
					{
					<tr>
						<td>@p.Id</td>
						<td><img width="40" src="~/assets/images/website-images/@p.ImageUrl"></td>
						<td>@p.Name</td>
						<td>@p.Price</td>
						<td>@p.Size.Name</td>
						<td>@p.Color.Name</td>
						<td>@p.Category.Name</td>
						<td>@p.Desc</td>
						<td><a class="btn btn-danger" asp-area="Manage" asp-controller="Product" asp-action="Delete" asp-route-id="@p.Id">Delete</a></td>
						<td><a class="btn btn-info" asp-area="Manage" asp-controller="Product" asp-action="Update" asp-route-id="@p.Id">Update</a></td>
					</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>